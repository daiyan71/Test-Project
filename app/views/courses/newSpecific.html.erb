<%= render 'shared/navbar_admin' %>
<div class = "container">
  <div class="row">
    <div class="col-md-2">
    </div>
    <div class="col-md-8" id="contactForm">
      
    <h1>New Course</h1>

    <%= form_with(model: @course, local: true) do |form| %>
        <% if @course.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@course.errors.count, "error") %> prohibited this course from being saved:</h2>
      
            <ul>
              <% @course.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>
      
        <div class="field">
          <%= form.label :courseId %>
          <%= form.text_field :courseId %>
        </div>
      
        <div class="field">
          <%= form.label :courseName %>
          <%= form.text_field :courseName %>
        </div>
      
        <div class="field">
          <%= form.label :credit %>
          <%= form.text_field :credit %>
        </div>
      
        
        <%= form.text_field :semester_id, value: @idd, class:"d-none" %>
      
        <div class="actions">
          <%= form.submit "ADD COURSE"%>
        </div>
      <% end %>
      

    <%= link_to 'Back', courses_path %>
    </div>
    <div class="col-md-2">
    </div>
</div>

</div> 