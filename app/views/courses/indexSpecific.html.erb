<%= render 'shared/navbar_admin' %>
<div class="container" style="margin-top: 0px;">
<div class="row">
<div class="col-md-2">

</div>
      <div class="table-responsive col-md-8">
        <table class="table">
          <tr>
          
          <tr>
            <th colspan="6">
              <h3 class="text-center">Courses</h3>
          </tr>
          </tr>
          <tr >
            <th class="text-center" width="25%">Courseid</th>
            <th class="text-center" width="25%">Coursename</th>
            <th class="text-center" width="10%">Credit</th>
            <th class="text-center" width="20%">Semester</th>
            <th class="text-center" width="20%"></th>
          </tr>
            
          <% @courses.each do |course| %>
            <tr>
              <td class="text-center"><%= course.courseId %></td>
              <td class="text-center"><%= course.courseName %></td>
              <td class="text-center"><%= course.credit %></td>
              <td class="text-center"><%= course.semester.name %></td>
              <td class="text-center d-flex"><%= link_to 'Edit', edit_course_path(course),
                class:"btn btn-info btn-sm text-white d-flex justify-content-center",
                style:"margin-left:15px; margin-right:15px"
              %>
              <%= link_to 'Destroy', course, method: :delete,
              class:"btn btn-danger btn-sm text-white d-flex justify-content-center",
              style:"margin-left:15px; margin-right:15px",
              data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
      </table>
      <%= link_to 'Add a course', new_specific_course_path(@semId),class:"btn btn-success btn-sm text-white justify-content-center" %>
        </table>
      </div>


    </div>
  </div>
</div>