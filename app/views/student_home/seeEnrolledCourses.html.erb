<div class="container" style="margin-top: 0px;">
<div class="row">
<div class="col-md-2">

</div>
      <div class="table-responsive col-md-8">
  <table class="table">
    <tr><th colspan="6"><h3 class="text-center">Enrollments</h3></th></tr>
    <tr >
      <th width="20%">Semester</th>
      <th width="20%">Course Id</th>
      <th width="20%">Course Name</th>
      <th width="10%">Credit</th>
      <th width="15%">Marks</th>
    </tr>
      <% @courses.each do |enrollment| %>
        <tr>
          <td><%= enrollment.semester.name %></td>
          <td><%= enrollment.course.courseId %></td>
          <td><%= enrollment.course.courseName %></td>
          <td><%= enrollment.course.credit %></td>
          <td><%= enrollment.marks %></td>
          <% if enrollment.marks == nil %>
              <td><%= link_to 'Remove', enrollment,class:"btn btn-danger d-flex justify-content-center",
              style:"margin-left:15px; margin-right:15px",
              method: :delete,
              data: { confirm: 'Are you sure?' } %></td>
          <% end %>
        </tr>
      <% end %>
 </table>

  </table>
</div>
<% if !(@result == nil  || @result.gpa ==nil) %>
    <p> Your GPA is: <%=@result.gpa %> </p>
<% end %>
<div class="col-md-2">

</div>

</div>

  </div>