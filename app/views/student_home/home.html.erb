


<div class="container">
    <div class="main-body">
    
          <!-- Breadcrumb -->
          
          <!-- /Breadcrumb -->
    
          <div class="row gutters-sm">
            <div class="col-md-4 mb-3">
              <div class="card">
                <div class="card-body">
                  <div class="d-flex flex-column align-items-center text-center">
                  <%= image_tag current_student.image.url , class:"rounded-circle" , style:"width:150px" %> 
                    <div class="mt-3">
                      <h4><%=current_student.name%></h4>
                      <p class="text-secondary mb-1">Current Semester</p>
                      <p class="text-muted font-size-sm">Address</p>
                      <button class="btn btn-primary">See Courses</button>
                      <%= link_to "See Courses", see_courses_path ,class:"btn btn-outline-primary"%>
                      <%= link_to "Signout", destroy_student_session_path ,method: :delete, class:"btn btn-outline-primary"%>
                    </div>
                  </div>
                </div>
              </div>
              
            </div>
            <div class="col-md-8">
              <div class="card mb-3">
                <div class="card-body">
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Full Name</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                    <%=current_student.name%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Email</h6>
                    </div>
                    
                    <div class="col-sm-9 text-secondary">
                      <%=current_student.email%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Mobile</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                    <%=current_student.mobile%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-3">
                      <h6 class="mb-0">Address</h6>
                    </div>
                    <div class="col-sm-9 text-secondary">
                    <%=current_student.address%>
                    </div>
                  </div>
                  <hr>
                  <div class="row">
                    <div class="col-sm-12">
                      <%= link_to "Edit", edit_student_registration_path , class:"btn btn-info"%>
                    </div>
                  </div>
                </div>
              </div>

              



            </div>
          </div>

        </div>
    </div>