<p id="notice"><%= notice %></p>

<h1>ALL STUDENTS</h1>

<table>
  <thead>
    <tr>
      <th>Studentid</th>
      <th>Student Name</th>
      <th>Email</th>
      <th>Mobile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @student.each do |s| %>
      <tr>
        <td><%= s.id %></td>
        <td><%= s.name %></td>
        <td><%= s.email %></td>
        <td>0<%= s.mobile %></td>
        <td><%= link_to "Update Marks", update_mark_path(s.id) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

