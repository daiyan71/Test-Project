<p id="notice"><%= notice %></p>

<h1>Courses</h1>

<form class="d-flex col-md-4" action="/see_courses">
        <input class="form-control me-2" type="search" placeholder="Search" name="search" aria-label="Search">
        <button class="btn btn-outline-success" type="submit">Search</button>
</form>


<table>
  <thead>
    <tr>
      <th>Courseid</th>
      <th>Coursename</th>
      <th>Credit</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% @pub = false %>
  <% if !(@result == nil || @result.gpa == nil) %>
    <% @pub = true %>
    <td>Cant enroll,result has been published</td>
  <% end %>
    
    <% @availableCourses.each do |course| %>
      <tr>
        <td><%= course.courseId %></td>
        <td><%= course.courseName %></td>
        <td><%= course.credit %></td>
        <%if @pub == false %>
            <% if @alreadyEnrolled.include?course.id %>
                <td>Allready Enrolled</td>
            <% else %>
            <td><%= link_to 'Enroll',
                enrollments_path(:enrollment => { :semester_id => @crnt, :course_id => course.id, :student_id => current_student.id} ),
                method: :post,
                data: { confirm: 'Are you sure?' } %>
                </td>
            <% end %>
       <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
